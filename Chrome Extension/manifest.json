{
	"manifest_version": 2,
	"name": "UW Course Information Finder",
	"description": "This is used for finding information on existing courses at the University of Waterloo",
	"version": "0.1",
	"permissions": ["https://api.uwaterloo.ca/v2/*"],
	"background": {
    	"scripts": ["background.js"],
    	"persistant": false
	},
	"content_scripts": [
		{
		"matches": ["<all_urls>"],
		"css": [],
		"js": ["jquery-3.4.1.js", "content.js", "popup.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "UW Course Information Finder"
	}
}
